<h1>@<%= @user.username %>'s Profile & Tweets</h1>

<p><%= @user.name %></p>
<p><%= @user.location %></p>
<p><%= @user.bio %></p>

<p>
  <% if current_user.following.include?(@user.id) %>
    <%= link_to "Following", unfollow_path(id: @user.id),
        class: "btn btn-primary", id: "unfollow_btn" %>
  <% else %>
    <% if current_user.id != @user.id %>
      <%= link_to "Follow", now_following_path(id: @user.id),
          class: "btn btn-primary" %>
    <% end %>
  <% end %>
</p>

<% @user.tweets.each do |tweet| %>
  <div>
    <p><%= link_to "@" + tweet.user.username, show_user_path(id: tweet.user.id) %></p>
    <p><%= tweet.message.html_safe %></p>
    <!-- <p><%#= image_tag current_user.avatar.url %></p> -->
    <p><%= image_tag(tweet.user.avatar.url, size: "50x50")%></p>

  </div>
<% end %>
